# DeerFlow AutoGen 系統環境變數範例檔案
# 複製此檔案為 .env 並填入實際的值

# =============================================================================
# AutoGen 系統配置
# =============================================================================

# 啟用 AutoGen 系統 (true/false)
USE_AUTOGEN_SYSTEM=true

# =============================================================================
# 後端 API 配置
# =============================================================================

# 後端 API 服務的完整 URL
# 格式: http://HOST:PORT/api
# 範例: http://localhost:8000/api
# 範例: http://192.168.1.100:8000/api
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# =============================================================================
# 前端 UI 配置
# =============================================================================

# 前端應用的完整 URL
# 格式: http://HOST:PORT/chat
# 範例: http://localhost:3000/chat
# 範例: http://192.168.1.100:3000/chat
DEER_FLOW_URL=http://localhost:3000/chat

# =============================================================================
# OpenAI 配置
# =============================================================================

# OpenAI API 金鑰
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI 模型名稱
OPENAI_MODEL=gpt-4o-mini

# OpenAI API 基礎 URL (可選，預設為 OpenAI 官方)
OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# Azure OpenAI 配置 (如果使用 Azure)
# =============================================================================

# Azure OpenAI 端點
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API 金鑰
AZURE_OPENAI_API_KEY=your_azure_openai_api_key

# Azure OpenAI API 版本
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# 部署名稱
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini

# =============================================================================
# 搜尋引擎配置
# =============================================================================

# 搜尋引擎選擇 (tavily, duckduckgo, brave_search, arxiv, grounding_bing)
SEARCH_API=tavily

# Tavily Search API 金鑰
TAVILY_API_KEY=your_tavily_api_key_here

# Brave Search API 金鑰
BRAVE_API_KEY=your_brave_api_key_here

# =============================================================================
# 開發配置
# =============================================================================

# 開發模式
DEBUG=false

# 日誌等級 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 最大計劃迭代次數
MAX_PLAN_ITERATIONS=1

# 最大步驟數
MAX_STEP_NUM=3

# 啟用深度思考
ENABLE_DEEP_THINKING=false
